
page {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0;
}
page, view, text, input, button {
  /*box-sizing: border-box;*/
}
.scroll {
  width: 100%;
  position: relative;
  left: 0;
}
.scroll__content {
  position: absolute;
  width: 100%;
  min-height: 120%;
  transition: all 0s linear;
}
.scroll__content.return__content {
  transition: all .4s linear;
}
.refresh__wrap {
  height: 80px;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 14px;
  padding-top: 30px;
}
.refresh__wrap.real__wrap {
  position: fixed;
  transition: all 0s linear;
  top: 0;
  left: 0;
}
.refresh__wrap.real__wrap.return__wrap {
  transition: all .4s linear;
}
.refresh__center {
  position: relative;
  height: 100%;
  width: 500rpx;
  margin: 0 auto;
}
.refresh__icon {
  position: absolute;
  top: 5rpx;
  left: -20px;
  margin: auto auto;
  transition: all .4s linear;
  transform: rotate(0deg);
}
.refresh__icon.rotate {
  transform: rotate(180deg);
}
.refresh__icon image {
  width: 48rpx;
  height: 48rpx;
}
.refresh__wrap .tips {
  line-height: 20px;
}
.refresh__wrap .times {
  line-height: 30px;
}
.footer__line {
  width: 100%;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}
.footer__line .text {
  position: relative;
  display: inline-block;
  color: #999;
  font-size: 24rpx;
  padding: 0 23rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.footer__line .text:before,
.footer__line .text:after {
  display: inline-block;
  position: absolute;
  top: 50%;
  left: -100rpx;
  content: '';
  width: 100rpx;
  height: 2rpx;
  background-color: #ccc;
}
.footer__line .text.notline:before,
.footer__line .text.notline:after {
  display: none;
}
.footer__line .text:after{
  left: 100%;
}
.scroll__loading {
  margin: 0 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 120rpx;
  display: inline-block;
  vertical-align: middle;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  animation: scrollLoading 1s steps(12, end) infinite;
}
@keyframes scrollLoading { 
  0% { transform:rotate3d(0, 0, 1, 0deg ) }
  100% { transform:rotate3d(0, 0, 1, 360deg ) }
}